{% extends base_view %}

{% block title %}
  {% trans %}user.login.title{% endtrans %}
{% endblock %}

{% block body %}
  <div class="row">
    <div class="col-lg-12">
      <h1>{% trans %}user.login.title{% endtrans %}</h1>

      <form action="{{ path('b4rb4ross4_user_login') }}" method="post">

        <div class="form-group">
          <label for="username">{% trans %}user.entity.username{% endtrans %}:</label>
          <input type="text" id="username" name="_username" value="{{ last_username }}"/>
        </div>

        <div class="form-group">
          <label for="password">{% trans %}user.entity.password{% endtrans %}:</label>
          <input type="password" id="password" name="_password"/>
          <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        </div>

        <div class="form-group">
          <button type="submit" class="btn btn-default">{% trans %}user.action.login{% endtrans %}</button>
        </div>
      </form>
    </div>
  </div>
{% endblock %}