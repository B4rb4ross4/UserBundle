{% extends base_view %}

{% block title %}
    Show User
{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table table-responsive table-condensed">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{% if user.isActive %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Disabled At</th>
                <td>{% if user.disabledAt %}{{ user.disabledAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Expired</th>
                <td>{% if user.isExpired %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Expired At</th>
                <td>{% if user.expiredAt %}{{ user.expiredAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Locked</th>
                <td>{% if user.isLocked %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Locked At</th>
                <td>{% if user.lockedAt %}{{ user.lockedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Credentials expired</th>
                <td>{% if user.isCredentialsExpired %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Credentials Expired At</th>
                <td>{% if user.credentialsExpiredAt %}{{ user.credentialsExpiredAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Last Login At</th>
                <td>{% if user.lastLoginAt %}{{ user.lastLoginAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Registered At</th>
                <td>{% if user.registeredAt %}{{ user.registeredAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated At</th>
                <td>{% if user.updatedAt %}{{ user.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Login Attempts</th>
                <td>{{ user.loginAttempts }}</td>
            </tr>
            <tr>
                <th>Last Login Attempt</th>
                <td>{% if user.lastLoginAttempt %}{{ user.lastLoginAttempt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    {% if is_granted('ROLE_SUPER_ADMIN') %}
        <a href="{{ path('b4rb4ross4_user_list') }}" class="btn btn-default">Back to the list</a>
        <a href="{{ path('b4rb4ross4_user_edit', { 'id': user.id }) }}" class="btn btn-default">Edit</a>
    {% endif %}

{% endblock %}
