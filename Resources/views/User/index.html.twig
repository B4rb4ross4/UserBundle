{% extends {{ base_view }} %}

{% block body %}
    <h1>User list</h1>

    <table class="table table-striped table-hover table-condensed table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>User Actions</th>
                <th>Username</th>
                <th>Email</th>
                <th>Active</th>
                <th>Expired</th>
                <th>Locked</th>
                <th>Credentials Expired</th>
                <th>Last Login</th>
                <th>Registered At</th>
                <th>Updated At</th>
                <th>Login Attempts</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>
                    {{ user.id }}
                </td>
                <td>
                    <div class="btn-group" role="group" aria-label="user actions">
                        <a href="{{ path('user_show', { 'id': user.id }) }}" class="btn btn-default btn-sm">
                            <span class="glyphicon glyphicon-search"></span>
                        </a>
                        <a href="{{ path('user_edit', { 'id': user.id }) }}" class="btn btn-default btn-sm">
                            <span class="glyphicon glyphicon-edit"></span>
                        </a>
                    </div>
                </td>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>{% if user.isActive %}Yes{% else %}No{% endif %}</td>
                <td>{% if user.isExpired %}Yes{% else %}No{% endif %}</td>
                <td>{% if user.isLocked %}Yes{% else %}No{% endif %}</td>
                <td>{% if user.isCredentialsExpired %}Yes{% else %}No{% endif %}</td>
                <td>{% if user.lastLoginAt %}{{ user.lastLoginAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if user.registeredAt %}{{ user.registeredAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if user.updatedAt %}{{ user.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ user.loginAttempts }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('b4rb4ross4_user_register') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
