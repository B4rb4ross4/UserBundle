{% extends base_view %}

{% block title %}
  {% trans %}user.index.title{% endtrans %}
{% endblock %}

{% block body %}
  <h1>{% trans %}user.index.title{% endtrans %}</h1>

  <table class="table table-striped table-hover table-condensed table-responsive">
    <thead>
    <tr>
      <th>{% trans %}user.entity.id{% endtrans %}</th>
      <th>{% trans %}user.actions{% endtrans %}</th>
      <th>{% trans %}user.entity.username{% endtrans %}</th>
      <th>{% trans %}user.entity.email{% endtrans %}</th>
      <th>{% trans %}user.entity.active{% endtrans %}</th>
      <th>{% trans %}user.entity.expired{% endtrans %}</th>
      <th>{% trans %}user.entity.locked{% endtrans %}</th>
      <th>{% trans %}user.entity.credential_expired{% endtrans %}</th>
      <th>{% trans %}user.entity.last_login{% endtrans %}</th>
      <th>{% trans %}user.entity.registered_at{% endtrans %}</th>
      <th>{% trans %}user.entity.updated_at{% endtrans %}</th>
      <th>{% trans %}user.entity.login_attempts{% endtrans %}</th>
    </tr>
    </thead>
    <tbody>
    {% for user in users %}
      <tr>
        <td>
          {{ user.id }}
        </td>
        <td>
          <div class="btn-group" role="group" aria-label="user actions">
            <a href="{{ path('b4rb4ross4_user_show', { 'id': user.id }) }}" class="btn btn-default btn-sm">
              <span class="glyphicon glyphicon-search"></span>
            </a>
            <a href="{{ path('b4rb4ross4_user_edit', { 'id': user.id }) }}" class="btn btn-default btn-sm">
              <span class="glyphicon glyphicon-edit"></span>
            </a>
          </div>
        </td>
        <td>{{ user.username }}</td>
        <td>{{ user.email }}</td>
        <td>{% if user.isActive %}Yes{% else %}No{% endif %}</td>
        <td>{% if user.isExpired %}Yes{% else %}No{% endif %}</td>
        <td>{% if user.isLocked %}Yes{% else %}No{% endif %}</td>
        <td>{% if user.isCredentialsExpired %}Yes{% else %}No{% endif %}</td>
        <td>{% if user.lastLoginAt %}{{ user.lastLoginAt|date('Y-m-d H:i:s') }}{% endif %}</td>
        <td>{% if user.registeredAt %}{{ user.registeredAt|date('Y-m-d H:i:s') }}{% endif %}</td>
        <td>{% if user.updatedAt %}{{ user.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
        <td>{{ user.loginAttempts }}</td>
      </tr>
    {% endfor %}
    </tbody>
  </table>

  <ul>
    <li>
      <a href="{{ path('b4rb4ross4_user_create') }}">Create a new entry</a>
    </li>
  </ul>
{% endblock %}
